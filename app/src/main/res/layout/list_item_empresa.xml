<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanco">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/layout_Form"
>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblListId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/textnegro"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lblListItemDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
            android:textSize="12dp"
            android:text="@string/nombre_empresa_list"
            android:textColor="@color/textnegro" />

        <TextView
            android:id="@+id/lblListItemEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
            android:textSize="16dp"
            android:textColor="@color/textnegro" />
    </LinearLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonEdit"
        android:layout_marginLeft="60dp"
        android:src="@drawable/editar"
        android:background="@android:color/transparent"/>


</LinearLayout>
    <Button
        android:id="@+id/button_Agregar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/button_Agregar"
        android:layout_below="@+id/layout_Form"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_rosa"
        android:textColor="@color/textbotones"
        android:visibility="gone"/>
</RelativeLayout>