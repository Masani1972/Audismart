<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aosas.audismart.activitys.NotificacionesActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/layout_Form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/impuestoNotificacion"
            android:id="@+id/textView_impuesto"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_impuestoNotificacion"
            android:layout_below="@+id/textView_impuesto"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empresNotificacion"
            android:id="@+id/textView_empresa"
            android:layout_below="@+id/editText_impuestoNotificacion"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_empresaNotificacion"
            android:layout_below="@+id/textView_empresa"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fechaNotificacion"
            android:id="@+id/textView_fecha"
            android:layout_below="@+id/editText_empresaNotificacion"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_fechaNotificacion"
            android:layout_below="@+id/textView_fecha"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/boton_FechaNotificacion"
            android:layout_below="@+id/textView_fecha"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horaNotificacion"
            android:layout_below="@+id/editText_fechaNotificacion"
            android:id="@+id/textView_hora"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_horaNotificacion"
            android:layout_below="@+id/textView_hora"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dÃ­asNotificacion"
            android:id="@+id/textView_diasAntes"
            android:layout_below="@+id/editText_horaNotificacion"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_diasNotificacion"
            android:layout_below="@+id/textView_diasAntes"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horaAntesNotificacion"
            android:id="@+id/textView_horaAntes"
            android:layout_below="@+id/editText_diasNotificacion"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_horaAntesNotificacion"
            android:layout_below="@+id/textView_horaAntes"
            />


    </RelativeLayout>

    </ScrollView>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/botonEditar"
        android:id="@+id/button_Editar"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_rosa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/scrollView"
        android:textColor="@color/textbotones"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/botonEliminar"
        android:id="@+id/button_Eliminar"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_azul"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_Editar"
        android:layout_marginTop="10dp"
        android:textColor="@color/textbotones" />
</RelativeLayout>