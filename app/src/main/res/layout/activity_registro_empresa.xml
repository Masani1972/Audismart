<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aosas.audismart.activitys.Registro_PasoDosActivity">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/titulo_pasodos"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <View
                android:id="@+id/separator"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/textView_titulo"
                android:layout_centerVertical="true"
                android:background="#000"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_Form"
                android:layout_below="@+id/separator">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre_empresa"
                    android:id="@+id/textView_Nombre_Empresa"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/editText_Nombre_Empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_Nombre_Empresa"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/departamento"
                    android:id="@+id/textView_Departamento_Empresa"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText_Nombre_Empresa"/>

                <AutoCompleteTextView
                    android:id="@+id/editText_Departamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_Departamento_Empresa"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ciudad"
                    android:id="@+id/textView_Ciudad_Empresa"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText_Departamento"/>

                <AutoCompleteTextView
                    android:id="@+id/editText_Ciudad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_Ciudad_Empresa"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipo_documento"
                    android:id="@+id/textView_Tipo_Doc"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText_Ciudad"/>

            <AutoCompleteTextView
                android:id="@+id/editText_TipoDocumento"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_Tipo_Doc"
         />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/num_documento"
                    android:id="@+id/textView_Documento_Empresa"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText_TipoDocumento"/>

            <EditText
                android:id="@+id/editText_NumDocumento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_Documento_Empresa"
                android:inputType="number"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ingresos"
                    android:id="@+id/textView_Ingresos"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText_NumDocumento"/>

            <EditText
                android:id="@+id/editText_Ingresos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_Ingresos"
                android:inputType="number"
          />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/regimen"
                    android:id="@+id/textView_Regimen"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText_Ingresos"/>

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_Regimen"
                    android:id="@+id/editText_Regimen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fecha_Mercantil"
                    android:id="@+id/textView_Fecha_Mercantil"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText_Regimen"/>

                <EditText
                    android:id="@+id/editText_FechaMercantil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_Fecha_Mercantil"
                    android:inputType="date"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/periodicidad"
                    android:id="@+id/textView_Periodicidad"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText_FechaMercantil"/>

                <AutoCompleteTextView
                    android:id="@+id/editText_Periodicidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_Periodicidad"
                    android:inputType="date"
                    />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_Radiobutton"
            android:layout_below="@+id/layout_Form">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/impuesto"
                android:id="@+id/textView_impuesto"
                android:layout_alignParentStart="true" />

            <RadioGroup
                android:id="@+id/radioButton_impuestoConsumo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/textView_impuesto"
               >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/si"
                android:id="@+id/radioButton_Si"
                android:onClick="onRadioButtonClickedImpuesto"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:id="@+id/radioButton_No"
                android:onClick="onRadioButtonClickedImpuesto"/>

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contribuyentedeimpuesto"
                android:layout_below="@+id/radioButton_impuestoConsumo"
                android:id="@+id/textView_contribuyenteImpuesto"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true" />

            <RadioGroup
                android:id="@+id/radioButton_impuestoRiqueza"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/textView_contribuyenteImpuesto"
                >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/si"
                android:onClick="onRadioButtonClickedRiqueza"
                android:id="@+id/radioButton_SiContribuyente" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:onClick="onRadioButtonClickedRiqueza"
                android:id="@+id/radioButton_NoContribuyente" />

            </RadioGroup>


        </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tip"
                android:id="@+id/textView_Tip"
                android:layout_below="@+id/layout_Radiobutton"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />


            <Button
                android:id="@+id/button_Finalizar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_Tip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/boton_finalizar"
                android:background="@drawable/button_rosa"
                android:textColor="@color/textbotones"/>




        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
